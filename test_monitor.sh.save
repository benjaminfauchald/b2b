#!/bin/bash
# test_monitor.sh - Simple continuous test monitoring

SERVICE_NAME="test_monitor"
echo "ðŸ”§ Service Name: $SERVICE_NAME"

LOG_DIR="log"
mkdir -p $LOG_DIR

echo "ðŸš€ Starting continuous test monitoring..."
echo "ðŸ“‚ Logs will be saved to $LOG_DIR/"
echo "ðŸ“‹ Task list will be updated in $LOG_DIR/TASKS.md"
echo ""
echo "Press Ctrl+C to stop"

while true; do
    timestamp=$(date '+%Y-%m-%d %H:%M:%S')
    echo "â° Running tests at $timestamp"
    
    # Run tests and save full output
    bundle exec rspec --format documentation > $LOG_DIR/test_results.log 2>&1
    
    # Extract failing tests
    grep "FAILED" $LOG_DIR/test_results.log > $LOG_DIR/failing_tests.txt
    
    # Count failures
    failure_count=$(wc -l < $LOG_DIR/failing_tests.txt)
    
    # Create task list
    cat > $LOG_DIR/TASKS.md << EOF
# Test Status - $timestamp

**Status:** $([ $failure_count -eq 0 ] && echo "âœ… ALL PASSING" || echo "âŒ $failure_count FAILING")

## Tasks (Failing Tests):
$([ $failure_count -eq 0 ] && echo "*No failing tests! ðŸŽ‰*" || sed 's/^/- [ ] /' $LOG_DIR/failing_tests.txt)

## Quick Commands:
\`\`\`bash
# Run all tests
bundle exec rspec --format documentation

# Run specific test (replace with actual test description)
bundle exec rspec --format documentation -e "your test description here"

# View full test output
cat log/test_results.log
\`\`\`

---
*Updated automatically every 5 minutes*
EOF
    
    echo "ðŸ“Š Found $failure_count failing tests"
    echo "ðŸ“‹ Updated $LOG_DIR/TASKS.md"
    echo ""
    
    # Wait 5 minutes
    sleep 300
done
