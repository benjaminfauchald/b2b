<div class="inline-flex items-center gap-2">
  <!-- Email address -->
  <span class="text-sm text-gray-900 dark:text-gray-100">
    <%= person.email %>
  </span>

  <!-- Status badge -->
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color_classes %>">
    <%= status_text %>
  </span>

  <!-- Confidence indicator -->
  <% if status == 'valid' || status == 'invalid' %>
    <span class="text-xs <%= confidence_color %>" title="Confidence: <%= confidence_percentage %>%">
      <%= confidence_percentage %>%
    </span>
  <% end %>

  <!-- Last checked -->
  <span class="text-xs text-gray-500 dark:text-gray-400">
    <%= last_checked_text %>
  </span>

  <!-- Verify button if needed -->
  <% if needs_verification? %>
    <button type="button"
            data-person-id="<%= person.id %>"
            data-action="click->email-verification#verify"
            class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 dark:text-blue-400 dark:bg-blue-900/20 dark:hover:bg-blue-900/40">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Verify
    </button>
  <% end %>
</div>

<!-- Details section (expandable) -->
<% if show_details? %>
  <div class="mt-2 text-xs text-gray-600 dark:text-gray-400" data-email-verification-target="details">
    <% if verification_metadata['checks'].present? %>
      <div class="space-y-1">
        <% verification_metadata['checks'].each do |check_name, check_data| %>
          <div class="flex items-center gap-2">
            <% if check_data['passed'] %>
              <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            <% else %>
              <svg class="w-3 h-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            <% end %>
            <span><%= check_name.humanize %>: <%= check_data['message'] || (check_data['passed'] ? 'Passed' : 'Failed') %></span>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <% if verification_metadata['metadata'] && verification_metadata['metadata']['catch_all_suspected'] %>
      <div class="mt-1 flex items-center gap-1 text-yellow-600 dark:text-yellow-400">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <span>Possible catch-all domain</span>
      </div>
    <% end %>
  </div>
<% end %>