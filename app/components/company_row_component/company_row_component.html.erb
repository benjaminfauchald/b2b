<li class="<%= row_background_class %>">
  <%= link_to company_path(company), class: "block hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors duration-200 ease-in-out" do %>
    <div class="px-6 py-4">
      <!-- Company Header -->
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center min-w-0 flex-1">
          <div class="min-w-0 flex-1">
            <p class="text-base font-semibold text-indigo-600 dark:text-indigo-400 truncate">
              <%= company.company_name %>
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
              <%= company.registration_number %>
            </p>
          </div>
        </div>
        
        <!-- Status Badges -->
        <div class="flex items-center space-x-2 ml-4">
          <% if company.operating_revenue.present? || company.annual_result.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-400">
              Financial
            </span>
          <% end %>
          
          <% if company.website.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-400">
              Website
            </span>
          <% end %>
          
          <% if company.linkedin_url.present? || company.linkedin_ai_url.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/20 text-purple-800 dark:text-purple-400">
              LinkedIn
            </span>
          <% end %>
        </div>
        
        <!-- Arrow Icon -->
        <div class="ml-3 flex-shrink-0">
          <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>

      <!-- Company Details Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Industry Component -->
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div class="ml-3 min-w-0 flex-1">
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Industry</p>
            <p class="text-sm text-gray-900 dark:text-white mt-1 truncate" title="<%= company.primary_industry_description %>">
              <%= industry_display %>
            </p>
          </div>
        </div>

        <!-- Employees Component -->
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-3 min-w-0 flex-1">
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Employees</p>
            <p class="text-sm text-gray-900 dark:text-white mt-1">
              <%= employee_count_display %>
            </p>
          </div>
        </div>

        <!-- Website Component -->
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
            </svg>
          </div>
          <div class="ml-3 min-w-0 flex-1">
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Website</p>
            <% if website_display %>
              <p class="text-sm text-indigo-600 dark:text-indigo-400 mt-1 truncate hover:text-indigo-500" title="<%= company.website %>">
                <%= website_display %>
              </p>
            <% else %>
              <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">
                Not available
              </p>
            <% end %>
          </div>
        </div>

        <!-- LinkedIn Component -->
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </div>
          <div class="ml-3 min-w-0 flex-1">
            <div class="flex items-center justify-between">
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">LinkedIn</p>
              <% if is_ai_linkedin? %>
                <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-purple-100 dark:bg-purple-900/20 text-purple-800 dark:text-purple-400">
                  AI
                </span>
              <% end %>
            </div>
            <% if linkedin_display %>
              <div class="flex items-center mt-1">
                <p class="text-sm text-blue-600 dark:text-blue-400 truncate hover:text-blue-500 min-w-0 flex-1" title="<%= company.linkedin_url || company.linkedin_ai_url %>">
                  <%= linkedin_display %>
                </p>
                <% if linkedin_confidence_badge %>
                  <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium <%= 
                    linkedin_confidence_badge[:color] == 'green' ? 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400' :
                    linkedin_confidence_badge[:color] == 'yellow' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400' :
                    'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400'
                  %>">
                    <%= linkedin_confidence_badge[:text] %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">
                Not available
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Footer with Last Updated -->
      <div class="mt-4 pt-3 border-t border-gray-200 dark:border-gray-700">
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Updated <%= time_ago_in_words(company.updated_at) %> ago
        </p>
      </div>
    </div>
  <% end %>
</li>