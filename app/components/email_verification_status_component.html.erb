<div class="email-verification-status">
  <!-- Our System Status -->
  <div class="flex items-center space-x-3 mb-2">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_color_classes %>">
      <%= status_text %>
    </span>
    
    <% if confidence > 0 %>
      <span class="text-sm <%= confidence_color %>">
        <%= confidence_percentage %>% confidence
      </span>
    <% end %>
    
    <% if checked_at %>
      <span class="text-xs text-gray-500 dark:text-gray-400">
        <%= last_checked_text %>
      </span>
    <% end %>
  </div>

  <!-- ZeroBounce Comparison (if available) -->
  <% if has_zerobounce_data? %>
    <div class="mt-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-md border border-blue-200 dark:border-blue-800">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-blue-900 dark:text-blue-100">
          ZeroBounce Comparison
        </h4>
        <div class="flex items-center space-x-1">
          <% if systems_agree? %>
            <svg class="w-4 h-4 <%= agreement_icon_classes %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-xs text-green-600 dark:text-green-400">Agree</span>
          <% else %>
            <svg class="w-4 h-4 <%= agreement_icon_classes %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            <span class="text-xs text-red-600 dark:text-red-400">Disagree</span>
          <% end %>
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <!-- Our System Column -->
        <div>
          <h5 class="text-xs font-semibold text-gray-700 dark:text-gray-300 mb-1">Our System</h5>
          <div class="space-y-1">
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-600 dark:text-gray-400">Status:</span>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium <%= status_color_classes %>">
                <%= status_text %>
              </span>
            </div>
            <% if confidence > 0 %>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-600 dark:text-gray-400">Confidence:</span>
                <span class="text-xs <%= confidence_color %>">
                  <%= confidence_percentage %>%
                </span>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- ZeroBounce Column -->
        <div>
          <h5 class="text-xs font-semibold text-gray-700 dark:text-gray-300 mb-1">ZeroBounce</h5>
          <div class="space-y-1">
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-600 dark:text-gray-400">Status:</span>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium <%= zerobounce_status_color_classes %>">
                <%= zerobounce_status_text %>
              </span>
            </div>
            <% if zerobounce_confidence_percentage %>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-600 dark:text-gray-400">Quality:</span>
                <span class="text-xs text-blue-600 dark:text-blue-400">
                  <%= zerobounce_confidence_percentage %>%
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Additional ZeroBounce Features -->
      <% if person.zerobounce_free_email.present? || person.zerobounce_did_you_mean.present? %>
        <div class="mt-3 pt-2 border-t border-blue-200 dark:border-blue-700">
          <div class="flex flex-wrap gap-2">
            <% if person.zerobounce_free_email == true %>
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-400">
                Free Email
              </span>
            <% end %>
            
            <% if person.zerobounce_mx_found == true %>
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
                MX Found
              </span>
            <% elsif person.zerobounce_mx_found == false %>
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400">
                No MX
              </span>
            <% end %>
            
            <% if person.zerobounce_smtp_provider.present? %>
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                <%= person.zerobounce_smtp_provider %>
              </span>
            <% end %>
          </div>
          
          <% if person.zerobounce_did_you_mean.present? %>
            <div class="mt-2 p-2 bg-yellow-50 dark:bg-yellow-900/20 rounded border border-yellow-200 dark:border-yellow-700">
              <div class="flex items-start space-x-2">
                <svg class="w-4 h-4 text-yellow-600 dark:text-yellow-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="text-xs font-medium text-yellow-800 dark:text-yellow-200">Suggested correction:</p>
                  <p class="text-xs text-yellow-700 dark:text-yellow-300"><%= person.zerobounce_did_you_mean %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <% if zerobounce_imported_text %>
        <div class="mt-2 text-xs text-blue-600 dark:text-blue-400">
          <%= zerobounce_imported_text %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Verification Details (existing functionality) -->
  <% if show_details? %>
    <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
      <details class="group">
        <summary class="cursor-pointer text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
          Show verification details
        </summary>
        <div class="mt-2 p-2 bg-gray-50 dark:bg-gray-800 rounded border">
          <pre class="text-xs whitespace-pre-wrap"><%= JSON.pretty_generate(verification_metadata) %></pre>
        </div>
      </details>
    </div>
  <% end %>
</div>