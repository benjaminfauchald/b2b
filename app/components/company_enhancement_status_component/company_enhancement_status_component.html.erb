<div class="bg-white shadow rounded-lg p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Enhancement Services</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% services.each do |service| %>
      <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
        <div class="flex items-start justify-between">
          <div class="flex items-start space-x-3">
            <!-- Service Icon -->
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-<%= service[:color] %>-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-<%= service[:color] %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <% case service[:icon] %>
                  <% when "currency-dollar" %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  <% when "globe-alt" %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  <% when "user-group" %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  <% when "users" %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  <% end %>
                </svg>
              </div>
            </div>
            
            <!-- Service Info -->
            <div class="flex-1">
              <h4 class="text-sm font-medium text-gray-900"><%= service[:name] %></h4>
              <p class="text-xs text-gray-500 mt-1">
                Last updated: <%= last_update_text(service[:last_updated]) %>
              </p>
              <p class="text-sm text-gray-700 mt-2">
                <%= service[:data_summary] %>
              </p>
            </div>
          </div>
          
          <!-- Status Icon & Action -->
          <div class="flex flex-col items-end space-y-2">
            <svg class="w-5 h-5 <%= status_color(service) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% case status_icon(service) %>
              <% when "check-circle" %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              <% when "clock" %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              <% when "x-circle" %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              <% end %>
            </svg>
            
            <button data-turbo-method="post" 
                    data-turbo-action="<%= queue_path(service[:service_name]) %>"
                    class="text-xs bg-<%= service[:color] %>-600 text-white px-3 py-1 rounded hover:bg-<%= service[:color] %>-700 transition-colors">
              Update
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>