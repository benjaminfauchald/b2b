<section class="py-12">
  <div class="text-center mb-8">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-3">
      Platform Capabilities
    </h2>
    <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
      Powerful tools designed to enhance and verify your business data
    </p>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% features.each_with_index do |feature, index| %>
      <div class="p-6 bg-white border border-gray-100 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700 text-center group hover:shadow-md hover:border-gray-200 dark:hover:border-gray-600 transition-all duration-200">
        <div class="w-12 h-12 <%= icon_colors[index % icon_colors.length][:background] %> rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-105 transition-transform duration-200">
          <div class="<%= icon_colors[index % icon_colors.length][:icon] %>">
            <%= feature[:icon] %>
          </div>
        </div>
        <h4 class="text-base font-semibold text-gray-900 dark:text-white mb-2 leading-tight">
          <%= feature[:title] %>
        </h4>
        <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
          <%= feature[:description] %>
        </p>
      </div>
    <% end %>
  </div>
</section>