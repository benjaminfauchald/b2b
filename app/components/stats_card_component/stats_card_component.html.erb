<div class="p-6 bg-white rounded-lg shadow-sm border border-gray-200 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
  <div class="flex items-center mb-4">
    <% if icon %>
      <div class="flex items-center justify-center w-10 h-10 rounded-lg <%= color_classes %> mr-3">
        <span class="text-xl"><%= icon %></span>
      </div>
    <% end %>
    <p class="text-sm font-medium text-gray-600 dark:text-gray-400"><%= label %></p>
  </div>
  
  <div class="flex items-baseline space-x-2">
    <p class="text-3xl font-bold text-gray-900 dark:text-white" <% if data_stat %>data-stat="<%= data_stat %>"<% end %>><%= value %></p>
    <% if trend %>
      <span class="flex items-center text-sm font-medium <%= trend_color %>">
        <span class="mr-1"><%= trend_icon %></span>
        <%= trend %>
      </span>
    <% end %>
  </div>
</div>
