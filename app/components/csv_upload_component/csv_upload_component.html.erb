<div class="<%= wrapper_classes %>" data-controller="csv-upload">
  <!-- File Upload Zone -->
  <div class="<%= upload_zone_classes %>" 
       data-csv-upload-target="dropZone"
       data-action="click->csv-upload#openFileSelector dragover->csv-upload#handleDragOver drop->csv-upload#handleDrop dragleave->csv-upload#handleDragLeave"
       role="button"
       aria-label="Upload CSV file"
       tabindex="0">
    
    <div class="flex flex-col items-center justify-center pt-5 pb-6">
      <!-- Upload Icon -->
      <svg class="<%= icon_classes %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
      </svg>
      
      <!-- Primary Text -->
      <p class="<%= primary_text_classes %>">
        <span class="font-semibold">Choose CSV file</span> or drag and drop
      </p>
      
      <!-- Secondary Text -->
      <p class="<%= secondary_text_classes %>">CSV files only</p>
      <p class="<%= secondary_text_classes %>"><%= max_size_display %></p>
    </div>
  </div>

  <!-- Hidden File Input -->
  <input type="file" 
         name="csv_file" 
         id="csv_file"
         accept=".csv"
         required
         class="<%= file_input_classes %>"
         data-csv-upload-target="fileInput"
         data-action="change->csv-upload#validateFile" />

  <!-- Upload Progress -->
  <div data-csv-upload-target="progress" class="hidden mt-4">
    <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
      <div class="progress-bar bg-blue-600 h-2.5 rounded-full transition-all duration-300" 
           data-csv-upload-target="progressBar" 
           style="width: 0%"></div>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-400 mt-2" data-csv-upload-target="progressText">
      Uploading...
    </p>
  </div>

  <!-- File Info Display -->
  <div data-csv-upload-target="fileInfo" class="hidden mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-700">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
      <div>
        <p class="font-medium text-blue-800 dark:text-blue-200" data-csv-upload-target="fileName"></p>
        <p class="text-sm text-blue-600 dark:text-blue-400" data-csv-upload-target="fileSize"></p>
      </div>
    </div>
  </div>

  <!-- Error Display -->
  <div data-csv-upload-target="errors" class="hidden mt-4">
    <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-700">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400 dark:text-red-300 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">File Upload Error</h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300 error-message" data-csv-upload-target="errorMessage">
            <!-- Error message will be inserted here -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Help Text -->
  <div class="mt-4 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
    <p class="text-sm text-gray-600 dark:text-gray-400">
      <strong>Expected format:</strong> <%= help_text_content %>
    </p>
    <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
      First row should contain column headers. Boolean values can be: true/false, 1/0, yes/no, or left empty.
    </p>
  </div>
</div>