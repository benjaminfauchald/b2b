<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-medium text-gray-900">Enhancement Queue Management</h3>
    <button data-action="click->queue-manager#refreshStats" 
            class="text-sm text-blue-600 hover:text-blue-800">
      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      Refresh Stats
    </button>
  </div>

  <!-- Queue Statistics -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-gray-50 p-4 rounded">
      <p class="text-sm text-gray-600">Total Queued</p>
      <p class="text-2xl font-semibold text-gray-900"><%= total_queued %></p>
    </div>
    <div class="bg-gray-50 p-4 rounded">
      <p class="text-sm text-gray-600">Workers Busy</p>
      <p class="text-2xl font-semibold text-gray-900"><%= workers_busy %></p>
    </div>
    <div class="bg-gray-50 p-4 rounded">
      <p class="text-sm text-gray-600">Total Processed</p>
      <p class="text-2xl font-semibold text-green-600"><%= number_with_delimiter(total_processed) %></p>
    </div>
    <div class="bg-gray-50 p-4 rounded">
      <p class="text-sm text-gray-600">Total Failed</p>
      <p class="text-2xl font-semibold text-red-600"><%= number_with_delimiter(total_failed) %></p>
    </div>
  </div>

  <!-- Service Queue Controls -->
  <div class="space-y-4">
    <% services.each do |service| %>
      <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <!-- Service Icon -->
            <div class="w-12 h-12 bg-<%= service[:color] %>-100 rounded-lg flex items-center justify-center">
              <svg class="w-8 h-8 text-<%= service[:color] %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% case service[:icon] %>
                <% when "currency-dollar" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                <% when "globe-alt" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                <% when "user-group" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                <% when "users" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                <% end %>
              </svg>
            </div>
            
            <!-- Service Info -->
            <div>
              <h4 class="text-base font-medium text-gray-900"><%= service[:name] %></h4>
              <p class="text-sm text-gray-600"><%= service[:description] %></p>
              <p class="text-sm text-gray-500 mt-1">
                <span data-available-count="<%= service[:service_name] %>"><%= companies_needing_service(service[:service_name]) %> companies need processing</span><br>
                Queue size: <span class="font-medium text-gray-900"><%= queue_size(service[:queue_name]) %></span>
              </p>
            </div>
          </div>
          
          <!-- Queue Controls -->
          <div class="flex items-center space-x-2">
            <form data-turbo-frame="queue-stats" action="<%= service[:path] %>" method="post" class="flex items-center space-x-2">
              <%= csrf_meta_tags %>
              <input type="number" 
                     name="count" 
                     value="<%= [companies_needing_service(service[:service_name]), 10].min %>" 
                     min="1" 
                     max="<%= [companies_needing_service(service[:service_name]), 1000].min %>"
                     data-max-available="<%= companies_needing_service(service[:service_name]) %>"
                     class="w-20 px-2 py-1 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-<%= service[:color] %>-500">
              <button type="submit" 
                      class="px-4 py-2 bg-<%= service[:color] %>-600 text-white text-sm rounded hover:bg-<%= service[:color] %>-700 transition-colors">
                Queue
              </button>
            </form>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Queue All Section -->
  <div class="mt-6 pt-6 border-t">
    <div class="flex items-center justify-between">
      <div>
        <h4 class="text-base font-medium text-gray-900">Queue All Services</h4>
        <p class="text-sm text-gray-600">Run all enhancement services for companies that need updates</p>
      </div>
      <form data-controller="queue-all" class="flex items-center space-x-2">
        <input type="number" 
               name="count" 
               value="10" 
               min="1" 
               max="1000"
               data-queue-all-target="count"
               class="w-20 px-2 py-1 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <button type="button"
                data-action="click->queue-all#queueAll" 
                class="px-4 py-2 bg-indigo-600 text-white text-sm rounded hover:bg-indigo-700 transition-colors">
          Queue All
        </button>
      </form>
    </div>
  </div>
</div>

<div data-controller="queue-manager" 
     data-queue-manager-status-url-value="<%= enhancement_queue_status_companies_path %>">
</div>