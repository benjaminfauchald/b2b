<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" 
     data-controller="service-stats" 
     data-service-stats-url-value="<%= service_stats_people_path %>"
     data-service-stats-interval-value="1000">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">People</h1>
        <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
          Manage person profiles and extraction services
        </p>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= link_to "New Person", new_person_path, 
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>

  <!-- Service Queue Management -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Service Queue Management</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Profile Extraction Service -->
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6"
           data-controller="service-queue"
           data-service-queue-service-name-value="person_profile_extraction">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Profile Extraction</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Extract LinkedIn profiles via PhantomBuster</p>
            </div>
          </div>
        </div>
        
        <div class="mb-4">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            <span data-available-count="person_profile_extraction">0 companies need processing</span>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-500">
            <span data-queue-stat="person_profile_extraction" class="queue-button-stat">0 in queue</span>
          </p>
        </div>
        
        <%= form_with url: queue_profile_extraction_people_path, method: :post, 
            data: { 
              service_queue_target: "form",
              turbo: false 
            }, 
            class: "space-y-3" do |f| %>
          <div>
            <%= f.number_field :count, 
                value: 1, 
                min: 1, 
                max: 1000,
                data: { 
                  service_queue_target: "countInput",
                  max_available: 0
                },
                class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" %>
          </div>
          <div>
            <%= f.submit "Queue Processing", 
                data: { 
                  service_queue_target: "submitButton",
                  action: "click->service-queue#submit"
                },
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
      
      <!-- Email Extraction Service -->
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6"
           data-controller="service-queue"
           data-service-queue-service-name-value="person_email_extraction">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Email Extraction</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Find email addresses (Mock Service)</p>
            </div>
          </div>
        </div>
        
        <div class="mb-4">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            <span data-available-count="person_email_extraction">0 persons need processing</span>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-500">
            <span data-queue-stat="person_email_extraction" class="queue-button-stat">0 in queue</span>
          </p>
        </div>
        
        <%= form_with url: queue_email_extraction_people_path, method: :post, 
            data: { 
              service_queue_target: "form",
              turbo: false 
            }, 
            class: "space-y-3" do |f| %>
          <div>
            <%= f.number_field :count, 
                value: 10, 
                min: 1, 
                max: 1000,
                data: { 
                  service_queue_target: "countInput",
                  max_available: 0
                },
                class: "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" %>
          </div>
          <div>
            <%= f.submit "Queue Processing", 
                data: { 
                  service_queue_target: "submitButton",
                  action: "click->service-queue#submit"
                },
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          </div>
        <% end %>
      </div>
      
      <!-- Social Media Extraction Service -->
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6"
           data-controller="service-queue"
           data-service-queue-service-name-value="person_social_media_extraction">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Social Media Extraction</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">Find social media profiles (Mock Service)</p>
            </div>
          </div>
        </div>
        
        <div class="mb-4">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            <span data-available-count="person_social_media_extraction">0 persons need processing</span>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-500">
            <span data-queue-stat="person_social_media_extraction" class="queue-button-stat">0 in queue</span>
          </p>
        </div>
        
        <%= form_with url: queue_social_media_extraction_people_path, method: :post, 
            data: { 
              service_queue_target: "form",
              turbo: false 
            }, 
            class: "space-y-3" do |f| %>
          <div>
            <%= f.number_field :count, 
                value: 10, 
                min: 1, 
                max: 1000,
                data: { 
                  service_queue_target: "countInput",
                  max_available: 0
                },
                class: "shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" %>
          </div>
          <div>
            <%= f.submit "Queue Processing", 
                data: { 
                  service_queue_target: "submitButton",
                  action: "click->service-queue#submit"
                },
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Queue Statistics -->
  <turbo-frame id="person_queue_statistics">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 h-32 grid place-items-center">
        <div class="text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Profile Queue</p>
          <p class="text-3xl font-semibold text-gray-900 dark:text-white" data-queue-stat="person_profile_extraction">
            <%= number_with_delimiter(@queue_stats&.dig('person_profile_extraction') || 0) %>
          </p>
        </div>
      </div>
      
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 h-32 grid place-items-center">
        <div class="text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Email Queue</p>
          <p class="text-3xl font-semibold text-gray-900 dark:text-white" data-queue-stat="person_email_extraction">
            <%= number_with_delimiter(@queue_stats&.dig('person_email_extraction') || 0) %>
          </p>
        </div>
      </div>
      
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 h-32 grid place-items-center">
        <div class="text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Social Media Queue</p>
          <p class="text-3xl font-semibold text-gray-900 dark:text-white" data-queue-stat="person_social_media_extraction">
            <%= number_with_delimiter(@queue_stats&.dig('person_social_media_extraction') || 0) %>
          </p>
        </div>
      </div>
      
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 h-32 grid place-items-center">
        <div class="text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Total Processed</p>
          <p class="text-3xl font-semibold text-gray-900 dark:text-white" data-queue_stat="total_processed">
            <%= number_with_delimiter(@queue_stats&.dig(:total_processed) || 0) %>
          </p>
        </div>
      </div>
    </div>
  </turbo-frame>

  <!-- Search and Filter Bar -->
  <div class="mb-6">
    <%= form_with url: people_path, method: :get, class: "sm:flex sm:items-center sm:space-x-4" do |f| %>
      <div class="flex-1">
        <%= f.text_field :search, 
            value: params[:search],
            placeholder: "Search by name, company, or email...",
            class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" %>
      </div>
      
      <div class="mt-3 sm:mt-0">
        <%= f.select :filter,
            options_for_select([
              ["All People", ""],
              ["With Profiles", "with_profiles"],
              ["With Emails", "with_emails"],
              ["With Social Media", "with_social_media"],
              ["Needs Extraction", "needs_extraction"]
            ], params[:filter]),
            {},
            class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
      </div>
      
      <div class="mt-3 sm:mt-0">
        <%= f.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- People Table -->
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @people.each do |person| %>
        <li>
          <%= link_to person_path(person), class: "block hover:bg-gray-50 dark:hover:bg-gray-700" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center">
                    <p class="text-sm font-medium text-indigo-600 truncate">
                      <%= person.name %>
                    </p>
                    <% if person.title.present? %>
                      <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                        <%= person.title %>
                      </span>
                    <% end %>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex sm:space-x-6">
                      <% if person.company_name.present? %>
                        <p class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                          </svg>
                          <%= person.company_name %>
                        </p>
                      <% end %>
                      
                      <% if person.location.present? %>
                        <p class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
                          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          </svg>
                          <%= person.location %>
                        </p>
                      <% end %>
                    </div>
                    
                    <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
                      <% if person.profile_data.present? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-400">
                          Profile
                        </span>
                      <% end %>
                      
                      <% if person.email.present? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-400">
                          Email
                        </span>
                      <% end %>
                      
                      <% if person.social_media_data.present? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/20 text-purple-800 dark:text-purple-400">
                          Social Media
                        </span>
                      <% end %>
                      
                      <p class="ml-2 text-sm text-gray-500 dark:text-gray-400">
                        Updated <%= time_ago_in_words(person.updated_at) %> ago
                      </p>
                    </div>
                  </div>
                </div>
                <div class="ml-5 flex-shrink-0">
                  <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Pagination -->
  <div class="mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>