<% content_for :title, "Domain Details - #{@domain.domain}" %>

<% if notice %>
  <div class="mb-6 rounded-md bg-green-50 border border-green-200 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="w-full max-w-4xl mx-auto">
  <%= render PageHeaderComponent.new(
    title: @domain.domain, 
    subtitle: "Domain testing details and configuration"
  ) do |component|
    component.with_actions do %>
      <%= link_to domains_path, 
          class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 font-medium text-sm transition-colors" do %>
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Dashboard
      <% end %>
    <% end %>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Domain Information Card -->
    <%= render CardComponent.new(title: "Domain Information") do %>
      <%= render @domain %>
    <% end %>

    <!-- Testing Status Card -->
    <%= render CardComponent.new(title: "Testing Status") do %>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400">DNS Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @domain.dns.nil? ? 'bg-gray-100 text-gray-800' : (@domain.dns ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800') %>">
            <%= @domain.dns.nil? ? 'Not Tested' : (@domain.dns ? 'Active' : 'Inactive') %>
          </span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400">WWW Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @domain.www.nil? ? 'bg-gray-100 text-gray-800' : (@domain.www ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800') %>">
            <%= @domain.www.nil? ? 'Not Tested' : (@domain.www ? 'Active' : 'Inactive') %>
          </span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400">MX Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @domain.mx.nil? ? 'bg-gray-100 text-gray-800' : (@domain.mx ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800') %>">
            <%= @domain.mx.nil? ? 'Not Tested' : (@domain.mx ? 'Active' : 'Inactive') %>
          </span>
        </div>
      </div>
    <% end %>

    <!-- Actions Card -->
    <%= render CardComponent.new(title: "Actions") do %>
      <div class="space-y-3">
        <%= link_to edit_domain_path(@domain),
            class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 font-medium text-sm transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Domain
        <% end %>

        <%= button_to "Delete Domain", @domain, 
            method: :delete,
            data: { 
              confirm: "Are you sure you want to delete this domain? This action cannot be undone.",
              turbo_method: :delete
            },
            class: "w-full flex items-center justify-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 font-medium text-sm transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Domain
        <% end %>
      </div>
    <% end %>
  </div>
</div>
